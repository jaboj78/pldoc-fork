<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/target</directory>
      <includes>
	<include>${project.artifactId}-${project.version}*.jar</include>
      </includes>
     <outputDirectory>/target</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/test/resources/samples</directory>
      <includes>
	<include>*</include>
      </includes>
     <outputDirectory>/samples</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <filtered>true</filtered>
      <includes>
	<include>ojdbc_mvn_install.bat</include>
	<include>ojdbc_mvn_install.sh</include>
	<include>pldoc_maven_example.bat</include>
	<include>pldoc_maven_example.sh</include>
	<include>pldoc-sqlfiles-pom.xml</include>
	<include>pldoc-enterprise-pom.xml</include>
      </includes>
     <fileMode>0755</fileMode> 
     <outputDirectory>/</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/command/maven</directory>
      <filtered>true</filtered>
      <includes>
	<include>maven_*_settings.xml</include>
	<include>pldoc-*-pom.xml</include>
	<include>pldoc-*-settings.xml</include>
	<include>OtherDatabases.txt</include>
      </includes>
     <fileMode>0755</fileMode> 
     <outputDirectory>/</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/command</directory>
      <filtered>true</filtered>
      <includes>
	<include>*jdbc-mvn-install.sh</include>
      </includes>
     <fileMode>0755</fileMode> 
     <outputDirectory>/</outputDirectory> 
    </fileSet>
  </fileSets>
</assembly>
