<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.mycompany.app</groupId>
  <artifactId>my-app</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>PLDOC EXAMPLE POM</name>
  <url>http://maven.apache.org</url>

  <build>
    <plugins>
     <!-- mvn -f pldoc-sqlfiles-pom.xml pldoc:pldoc -->
      <plugin>
	<groupId>net.sourceforge.pldoc</groupId>
	<artifactId>maven-pldoc-plugin</artifactId>
	<version>${project.version}</version>
	  <dependencies>
	    <dependency>
	     <groupId>com.oracle</groupId>
	     <artifactId>ojdbc6</artifactId>
	     <version>12.1.0.2</version>
	    </dependency>
	  </dependencies>
	<configuration>
	  <applicationTitle>PLDoc Maven Example</applicationTitle>
	  <overviewFile>samples/overview1.html</overviewFile>
	  <!--<sourceDirectory>samples</sourceDirectory>
	  <includes>*.sql</includes> -->
	  <fileSets>
	    <fileSet>
	      <directory>samples</directory>
	      <include>**/*.sql</include>
	    </fileSet>
	    <fileSet>
	      <directory>/Users/sturton/Development/pldoc-code.svn/pldoc/trunk/src/test/resources/testinput</directory>
	      <includes>
		<include>**/*.fnc</include>
		<include>**/*.prc</include>
		<include>**/*.trg</include>
		<include>**/*.pks</include>
		<include>**/*.pkb</include>
		<include>**/*.tps</include>
		<include>**/*.tpb</include>
	      </includes>
	      <excludes>
		<exclude>**/*Java*</exclude>
		<exclude>**/*_fully_reserved*</exclude>
	      </excludes>
	    </fileSet>
	  </fileSets>
	  <!--inputEncoding>ISO-8859-15</inputEncoding-->
	  <inputEncoding>UTF8</inputEncoding>
	  <reportOutputDirectory>target/docs/apidocs</reportOutputDirectory>
	  <destDir>pldoc-goal-files</destDir>
	  <showSkippedPackages>true</showSkippedPackages>
	</configuration>                    
      </plugin>
	   <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-site-plugin</artifactId>
		<version>3.0</version>
		<configuration>
		<reportPlugins>
		 <!-- mvn -f pldoc-sqlfiles-pom.xml site -->
		  <plugin>
		    <groupId>net.sourceforge.pldoc</groupId>
		    <artifactId>maven-pldoc-plugin</artifactId>
		    <version>LATEST</version>
		    <configuration>
		      <name>PLDoc Maven Site Report Example</name>
		      <applicationTitle>PLDoc Maven Site Report Example</applicationTitle>
		      <overviewFile>samples/overview1.html</overviewFile>
		      <inputEncoding>UTF8</inputEncoding>
		      <!--
		      <inputEncoding>ISO-8859-15</inputEncoding>
		      <sourceDirectory>samples</sourceDirectory>
		      <includes>**/*.sql</includes>
                      -->
		      <fileSets>
			<fileSet>
			  <directory>samples</directory>
			  <include>**/*.sql</include>
			</fileSet>
			<fileSet>
			  <directory>/Users/sturton/Development/pldoc-code.svn/pldoc/trunk/src/test/resources/testinput</directory>
			  <includes>
			    <include>**/*.fnc</include>
			    <include>**/*.prc</include>
			    <include>**/*.trg</include>
			    <include>**/*.pks</include>
			    <include>**/*.pkb</include>
			    <include>**/*.tps</include>
			    <include>**/*.tpb</include>
			  </includes>
			  <excludes>
			    <exclude>**/*Java*</exclude>
			    <exclude>**/*_fully_reserved*</exclude>
			  </excludes>
			</fileSet>
		      </fileSets>
		      <!-- Ignored within Site Report - use destDir 
		      <reportOutputDirectory>target/site/apidocs</reportOutputDirectory>
		      -->
		      <destDir>pldoc-site-report</destDir>
		      <showSkippedPackages>true</showSkippedPackages>
		    </configuration>                    
		  </plugin>
		</reportPlugins>
		</configuration>
	    </plugin>
    </plugins>
  </build>
</project>
